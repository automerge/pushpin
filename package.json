{
  "name": "pushpin",
  "productName": "PushPin",
  "version": "1.1.0",
  "description": "A collaborative corkboard app",
  "repository": "https://github.com/inkandswitch/pushpin",
  "scripts": {
    "build-deps": "electron-builder install-app-deps",
    "compile": "electron-webpack",
    "start": "electron-webpack dev",
    "start2": "NAME=userA yarn start & NAME=userB yarn start",
    "start3": "NAME=userA yarn start & NAME=userB yarn start & NAME=userC yarn start",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "lint": "eslint --cache --color --ext .jsx,.js src",
    "test": "electron-mocha --renderer test/**/*.{js,jsx}",
    "build-docs": "rm -rf ./docs && parcel build src/docs.html -d docs -o index --public-url '.' && rm -rf .cache",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "inkandswitch",
  "license": "MIT",
  "config": {},
  "electronWebpack": {
    "title": "PushPin",
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "dependencies": {
    "@ibm/plex": "^1.4.1",
    "automerge": "https://github.com/automerge/automerge#text-hack",
    "bs58": "^4.0.1",
    "classnames": "^2.2.6",
    "codemirror": "^5.47.0",
    "diff-match-patch": "^1.0.4",
    "discovery-cloud-client": "^0.0.3",
    "discovery-swarm": "^5.1.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-prompt": "^1.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "hypercore": "^7.2.0",
    "hypercore-protocol": "^6.11.0",
    "hyperdiscovery": "^9.0.1",
    "hypermerge": "git+https://github.com/automerge/hypermerge#document-message-prototype",
    "immutable": "^3.8.2",
    "jimp": "^0.6.4",
    "js-crc": "^0.2.0",
    "line-awesome": "git+https://github.com/choxi/line-awesome.git",
    "mime-types": "^2.1.24",
    "mkdirp": "0.5.1",
    "react": "16.8.6",
    "react-color": "^2.17.3",
    "react-contextmenu": "2.11.0",
    "react-dom": ">=16.8.6",
    "react-hot-loader": "^4.8.8",
    "react-measure": "^2.3.0",
    "react-pdf": "^4.1.0",
    "react-rnd": "^9.1.2",
    "source-map-support": "^0.5.12",
    "tmp": "0.1.0",
    "to-buffer": "^1.1.1",
    "unfluff": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "electron": "4.0.0",
    "electron-builder": "^20.41.0",
    "electron-mocha": "^8.0.2",
    "electron-webpack": "^2.6.2",
    "electron-webpack-eslint": "^4.0.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "mocha": "^6.1.4",
    "parcel-bundler": ">=1.12.3",
    "react-test-renderer": "^16.8.6",
    "webpack": "4.28.4"
  },
  "resolutions": {
    "random-access-file": "https://github.com/pvh/random-access-file",
    "automerge": "https://github.com/automerge/automerge#text-hack"
  }
