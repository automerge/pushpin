{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2015", "es2017", "dom", "webworker"],
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "pretty": true,
    "experimentalDecorators": true
  }
}
